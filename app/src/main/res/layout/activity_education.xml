<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SkillsActivity">

    <TextView
        android:id="@+id/tvEducationHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Education"
        android:textStyle="bold"
        android:textSize="18sp"
        android:padding="10dp"
        android:background="@drawable/blue_button_background"
        android:textColor="@color/white"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/tvEducationSubheader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="EDUCATIONAL BACKGROUND WITH DATES"
        android:textSize="16sp"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvEducationHeader"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvEducation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="● Semicolon African, 2022 - 2023\n\n● School of Nursing, Our Lady Of Lourdes Hospital, 2012 - 2016\nIhiala Anambra State.\n\n● Busy International Secondary School, Nimo, 2005 – 2012\nAnambra State\n\n● Uruekwe Primary School, Enugwu – 1998 - 2004\nUgwu Anambra State"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvEducationSubheader"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvQualificationSubheader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="QUALIFICATION OBTAINED WITH DATES"
        android:textSize="16sp"
        android:padding="10dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/tvEducation"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvQualification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="● Software Engineer 2023\n\n● Registered Nurse (RN) 2016\n\n● West African Senior Secondary Certificate (WASSCE) 2012\n\n● First School Leaving Certificate (FSLC) 2004"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvQualificationSubheader"
        app:layout_constraintStart_toStartOf="parent" />

</LinearLayout>
